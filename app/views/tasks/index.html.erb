<div class="container">
  <h1 class="text-center mb-5 mt-5">Tasks</h1>
  <div class="text-center cards">
    <% @tasks.each do |task|%>
      <div class="card mx-auto" style="width: 18rem;">
        <div class="card-body">
          <div class="card-title"><%=link_to task.title, task_path(task), class: "text-decoration-none", style: "color: #254441;"%></div>
          <%if task.completed%>
            <i class="fa-regular fa-square-check text-center m-2"></i>
          <%else%>
            <i class="fa-regular fa-square text-center m-2"></i>
          <% end %>
          <%= link_to '<i class="fa-solid fa-trash-can m-3"></i>'.html_safe, task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, style: "color: #254441;"%>
        </div>
      </div>
    <% end %>
  </div>
  <div class="buttons btn-add d-flex m-auto mt-5">
    <%= link_to "Add a task", new_task_path, class: "text-decoration-none text-white"%>
  </div>
</div>
